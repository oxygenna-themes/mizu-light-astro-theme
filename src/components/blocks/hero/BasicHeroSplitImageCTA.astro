---
// Basic Hero CTA Split Image
// ------------
// Description: A hero section with a title and a subtitle, with a split image
// Properties:
// - title: The title of the hero section
// - subtitle: The subtitle of the hero section
// - text: The text of the hero section
// - buttonText: The text of the button
// - buttonLink: The link of the button
// - buttonClasses: Additional classes for the button
// - classes: Additional classes for the section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import Button from '../../ui/Button.astro'
// - UI
import Header from '../../ui/Header.astro'
import { Image } from 'astro:assets'

// Content
// - Assets
import macbookImage from '../../../assets/hero/macbook.webp'
// - Props
type Props = {
	title?: string
	subtitle?: string
	text?: string
	image?: any
	titleSpan?: string
	buttonText?: string
	buttonLink?: string
	buttonClasses?: string
	classes?: string
}
const {
	title = '',
	text = '',
	subtitle = '',
	image = macbookImage,
	buttonText = '',
	buttonClasses = 'w-full lg:w-auto',
	buttonLink = '/',
	classes = '',
} = Astro.props
---

<Section classes={`${classes ? classes : ''}`} spacerTop={true}>
	<Row classes="gap-y-0!">
		<!-- Intro Text -->
		<Col
			span="6"
			classes="py-16 lg:py-24 border-b border-b-neutral-200 dark:border-b-neutral-700 lg:border-b-0 lg:border-r lg:border-r-neutral-200 dark:border-r-neutral-700"
		>
			<Header title={title} subtitle={subtitle} />
			<div class="px-6 lg:px-8">
				<p class="mb-0! max-w-md py-6 text-xl leading-9 last:pb-0 lg:py-12">
					{text}
				</p>
				{
					buttonText && (
						<Button classes={buttonClasses} link={buttonLink}>
							{buttonText}
						</Button>
					)
				}
			</div>
		</Col>

		<Col
			span="6"
			classes="lg:border-l lg:border-neutral-200 bg-neutral-50! dark:bg-neutral-900! bg-[url('/bgs/dot-gray-light.svg')] bg-size-[18px] bg-fixed dark:bg-[url('/bgs/dot-gray-dark.svg')] dark:bg-size-[18px] dark:bg-fixed dark:border-neutral-700 overflow-hidden lg:flex lg:items-center py-16 lg:py-0"
		>
			<Image
				src={image}
				alt="Mizu Light"
				class="lg:absolute lg:top-1/2 lg:left-0 lg:w-5xl lg:max-w-none lg:-translate-y-1/2"
				layout="constrained"
				decoding="async"
				loading="eager"
				fetchpriority="high"
				width={1024}
			/>
		</Col>
	</Row>
</Section>
