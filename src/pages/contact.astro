---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'

// - Blocks
import Hero from '../components/blocks/hero/SimpleHeroBasic.astro'
import ContactInfo from '../components/blocks/contact/ContactInfoCards.astro'
import Brand from '../components/blocks/brand/Marquee.astro'
import Faq from '../components/blocks/faq/StickyFaq.astro'
import CTA from '../components/blocks/cta/CTAPrimary.astro'

// Content
// - SEO
const SEO = {
	title: 'Mizu Light Astro Theme | Contact',
	description:
		'Get in touch with the Mizu Light team for support, customization, or partnership inquiries. We’re here to help you make the most of your Astro theme.'
}
// - Hero data
const heroData = {
	title: 'Got a question before take-off?',
	subtitle: 'Let’s Connect',
	text: 'Reach out directly to the team that can best help you. We’re here to answer questions and guide you ahead of launch.',
}
// - Contact data
const contactData = {
	title: 'Choose support, sales, or requests and let’s get started.'
}
// - Brand data
const brandData = {
	title: 'Built in collaboration with'
}
// - FAQ data
const faqData = {
	title: 'Everything you need to know',
	subtitle: 'Frequently Asked Questions'
}
// - CTA data
const ctaData = {
	title: 'Let’s Build the Future Together',
	text: 'We’re always looking for passionate, driven people to join our team. Even if you don’t see the perfect role listed, we’d still love to hear from you. Send us your CV and let’s explore how we can grow together.',
	buttonLink: '/contact',
	buttonText: 'Send Your CV'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		title={heroData.title}
		subtitle={heroData.subtitle}
		text={heroData.text}
	/>
	<ContactInfo title={contactData.title} />
	<Brand title={brandData.title} />
	<Faq subtitle={faqData.subtitle} title={faqData.title} />
	<CTA
		title={ctaData.title}
		text={ctaData.text}
		buttonLink={ctaData.buttonLink}
		buttonText={ctaData.buttonText}
	/>
</Layout>
